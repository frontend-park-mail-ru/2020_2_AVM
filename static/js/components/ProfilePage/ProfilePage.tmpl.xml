<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">

         <section class="s-content s-styles">
             <div class="row">
                <div class="column large-12 intro">
                    <h1><fest:value>data.login</fest:value></h1>
                </div>
            </div>
             <div class="row">
                <div class="column large-6 tab-12">
                    <h3 class="h-add-bottom">Аватар</h3>
                    <figure>
                         <img src="{data.image}" sizes="(max-width: 1050px) 100vw, 1050px" alt="" />
                    </figure>
                </div>
                <div class="column large-6 tab-12">
                    <h3>О себе</h3>
                        <p class="drop-cap">
                            email: <fest:value>data.email</fest:value>
                        </p>
                </div>
            </div>
             <div class="row">
                 <div class="column large-12">
                     <h3>Статьи</h3>
                     <div class="row half-bottom">

                        <fest:for iterate="data.articles" index="i">
                             <div class="column large-6 tab-12">
                                 <h4><fest:value>data.articles[i].Title</fest:value></h4>
                                 <p><fest:value>data.articles[i].desc</fest:value></p>
                             </div>
                        </fest:for>
                     </div>
                 </div>
             </div>
         </section>
</fest:template>