{
  "extends": "stylelint-config-standard",

  "rules": {
    "color-hex-case": [
      "lower",
      {
        "message": "Lowercase letters are easier to distinguish from numbers"
      }
    ],
    "indentation": [
      4,
      {
        "except": ["block"],
        "message": "Please use 4 spaces for indentation.",
        "severity": "warning"
      }
    ]
  }
}